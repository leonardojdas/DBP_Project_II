@model List<deAndrade_Project_II.Models.Department>
@{
    ViewBag.Title = "Departments";
}

<h2>Department's List</h2>

<div id="search" class="">
    <input type="text" id="txtSearch" class="form-control" placeholder="Search">
    <button class="btn btn-default" type="button" onclick="new Company().Search()">Search</button>
</div>

<div id="new-customer" class="">
    <a class="btn btn-default" onclick="new Company().Upsert();">Add new department</a>
</div>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th><span class="theader">ID</span></th>
            <th><span class="theader">Name</span></th>
            <th><span class="theader">Code</span></th>
            <th><span class="theader">Number of employees</span></th>
            <th><span class="theader">Edit</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>@department.Code</td>
                <td>@department.Num_Employees</td>
                <td onclick="new Company().Upsert(@department.Id);"><span class="fa fa-edit"></span></td>
            </tr>
        }
    </tbody>
</table>