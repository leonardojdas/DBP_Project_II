@model deAndrade_Project_II.Models.Product
@{
    ViewBag.Title = "Upsert";
}

<h2><span id="title"></span> Product</h2>

@using (Html.BeginForm("Upsert", "Product", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Id, new { @class = "form-control" })
    <div class="upsert-container">
        <div class="no-collapsing">
            <div class="form-title">Product name</div>
            <div class="form-field">
                @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Product name" })
            </div>
        </div>

        <div><hr /></div>
        <div class="no-collapsing">
            <div class="form-title">Description</div>
            <div class="form-field">
                @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Product description" })
            </div>
        </div>

        <div><hr /></div>
        <div class="no-collapsing">
            <div class="form-title">Price</div>
            <div class="form-field">
                @Html.TextBoxFor(p => p.Price, new { @type = "number", @class = "form-control", @placeholder = "Price", @min = "1" })
            </div>
        </div>
    </div>
    <div class="align-content-center">
        <input type="submit" value="Submit" class="btn btn-default" />
        <input type="button" value="Cancel" onclick="new Company().Back();" class="btn btn-default" />
    </div>
}